
<h2>Guilds</h2>

@model PaginatedList<Canoe.Models.Guild>

@{
    ViewData["Title"] = "Guilds";
}


<table class="table">
    <thead>
        <tr>
            <th class="text-center">Guild Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaderCD)
            </td>
            <td>
                <form action="@Url.Action("Player")" method="post">
                    <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                    <button name="v_intPlayerID" value="@item.ID" type="submit" class="btn btn-link">Players</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>



<form action="@Url.Action("GuildList")" method="post">
    @if (Model.HasPreviousPage)
    {
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>
