@model Canoe.Models.EditUser

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AccessFailedCount" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="AccessFailedCount" class="form-control">
            <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmailConfirmed" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="EmailConfirmed" class="form-control">
            <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LockoutEnabled" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="LockoutEnabled" class="form-control">
            <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LockoutEnd" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="LockoutEnd" disabled class="form-control">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="List" class="btn btn-primary">Cancel</a>
        </div>
    </div>



    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moement</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>
</form>
