

@model PaginatedList<Canoe.Models.CardViewComplete>

@{
    ViewData["Title"] = "Cards";
}

    <h2>Cards Detail</h2>

@foreach (var item in Model)
{
    <table>
        <tr>
            <td>ID </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
        </tr>
        <tr>
            <td>Name: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
        </tr>
        <tr>
            <td>Converted Mana Cost: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.ConvertedManaCost)</td>
        </tr>
        <tr>
            <td>Commander: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.CommanderCapable)</td>
        </tr>
        <tr>
            <td>Power: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Power)</td>
        </tr>
        <tr>
            <td>Toughness: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Toughness)</td>
        </tr>
        <tr>
            <td>Mana Cost: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.ManaCost)</td>
        </tr>
        <tr>
            <td>Rarity: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Rarity)</td>
        </tr>
        <tr>
            <td>Colors: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Colors)</td>
        </tr>
        <tr>
            <td>Tribes: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Tribes)</td>
        </tr>
        <tr>
            <td>Classes: </td>
            <td WIDTH="50"></td>
            <td>@Html.DisplayFor(modelItem => item.Classes)</td>
        </tr>

    </table>


    <form action="@Url.Action("CardList")" method="post">
        <button name="v_intPageNumber" value="1" type="submit" class="btn btn-link">Back To List</button>
    </form>
}



