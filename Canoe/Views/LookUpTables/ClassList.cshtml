
<h2>Sets</h2>

@model PaginatedList<Canoe.Models.Classes>

@{
    ViewData["Title"] = "Classes";
}

<form action="@Url.Action("SetCreate")" method="post">
    <input type="hidden" name="v_strAction" value="Prep">
    <button name="v_intPageNumber" value="@(Model.PageIndex)" type="submit" class="btn btn-link">Add Class</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th class="text-center">Class Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form action="@Url.Action("SetEdit")" method="post">
                        <input type="hidden" name="v_strAction" value="Prep">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <button name="v_intID" value="@item.ID" type="submit" class="btn btn-link">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



<form action="@Url.Action("ClassList")" method="post">
    @if (Model.HasPreviousPage)
    {
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>
